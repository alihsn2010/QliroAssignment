{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "allowJs": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true
  },

  "include": ["src/**/*"],
  "exclude": ["**/*.test.*"]
}
